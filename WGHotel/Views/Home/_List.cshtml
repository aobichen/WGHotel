@model IEnumerable<WGHotel.Models.HotelViewModel>


@foreach (var item in Model)
{
    <article class="one-fourth">
        <figure>
            <a href="location.html" title="">
               <img src="@Url.Action("HotelFirstImage", "Home", new  { id = item.Image})" alt="@item.Name" />
         
            </a>
        </figure>
        <div class="details">
            <a href="location.html" title="View all" class="gradient-button">View all</a>
            <h4>@item.Name</h4>
            <span class="count">(02)1234-5678</span>
            <div class="ribbon">
                <div class="half">
                    
                    <a href="hotels.html" title="View all">
                        @*<span class="small">from</span>
                        <span class="price">&#36; @item.Game</span>*@
                        <span class="small">台北市</span>
                        <span class="price">巨蛋田徑</span>
                    </a>
                    
                </div>
                <div class="half hotel">
                    <a href="flights.html" title="View all">
                        <span class="small"></span>
                        <span class="price">&#36; @item.ID</span>
                    </a>
                </div>
            </div>
        </div>
    </article>
}
