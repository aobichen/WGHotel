<div class="full-width">
    @{
        var items = (List<WGHotel.Areas.Backend.Models.GameSiteViewModel>)ViewBag.GameSites;
    
        foreach (var item in items) { 
        <div class="one-fourth">
            <label>
                @if (item.Checked)
                {
                    <input type="checkbox" name="Game" checked value="@item.ID" />
                    @item.Value
                }
                else
                {
                    <input type="checkbox" name="Game" value="@item.ID" />
                    @item.Value
                }
                
            </label>
        </div>
        }
    }
</div>
