@model IEnumerable<WGHotel.Areas.Backend.Models.RoomList>

<p>
   
</p>


<div class="row">
    <div class="form-group ">
       
        <div class="col-sm-offset-10 col-lg-offset-10">
            @Html.ActionLink("Create New", "Create", new { id = ViewBag.HotelID }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="col-lg-12">
    <table class="table table-responsive table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BedType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sell)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantiy)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @WGHotel.Helpers.CodeFiles.GetCodeFileDescription(item.RoomType)
                    @*@Html.DisplayFor(modelItem => item.RoomType)*@
                </td>
                <td>
                    @WGHotel.Helpers.CodeFiles.GetCodeFileDescription(item.BedType)
                  
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Sell)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Quantiy)
                </td>

                <td>
                    <div class="btn-group">

                        <a class="btn btn-success" href="@Url.Action("Price","Room", new { id = item.ID})">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        
                    </div>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })*@
                </td>
            </tr>
}

    </table>
</div>