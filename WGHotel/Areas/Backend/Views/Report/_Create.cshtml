@model WGHotel.Areas.Backend.Models.ReportViewModel

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(model=>model.ImgKey)*@
    <div class="panel">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="icon_house_alt"></i>Account</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="@Url.Action("/", "Admin")">Home</a></li>
                        <li><i class="icon_house_alt"></i>Hotel</li>

                    </ol>
                </div>
            </div>

            
            @Html.HiddenFor(model=>model.ID)

            <div class="row">
                <div class="col-lg-12">
                    <section class="panel panel-success">
                        <header class="panel-heading">
                            
                        </header>
                        <div class="panel-body">
                            <div class="form-horizontal">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">房型</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownList("RoomID", null,null, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">旅客國籍</label>
                                    <div class="col-sm-10 col-md-6 col-lg-6">
                                        @*@Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })*@
                                        @Html.DropDownList("Country", null,null, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">日期</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.CheckInDate, new { htmlAttributes = new { @class = "form-control",@type="date" } })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">人數</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.NumOfPeople, new { htmlAttributes = new { @class = "form-control"} })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">房價</label>
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">備註</label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                               

                            </div>
                        </div>
                    </section>               

                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <!-- Buttons -->
                    <div class="col-lg-offset-10 col-md-offset-10 col-lg-9">
                        <button type="submit" class="btn btn-primary">確定</button>

                    </div>
                </div>
            </div>
        </div>

    </div>

}
